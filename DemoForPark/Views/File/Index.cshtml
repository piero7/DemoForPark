@{
    ViewBag.Title = "上传文件";
}
@Scripts.Render("~/Scripts/jquery-1.8.2.min.js")

@Scripts.Render("~/Scripts/uploadify/jquery.uploadify.min.js")
@Styles.Render("~/Scripts/uploadify/uploadify.css")
<script type="text/javascript">
    $(function () {
        $("#file_upload_1").uploadify({
            swf: '/Scripts/uploadify/uploadify.swf',
            uploader: '/File/Upload',

            width: 60,                          // 按钮的宽度
            height: 23,                         // 按钮的高度
            buttonText: "上传",                 // 按钮上的文字
            buttonCursor: 'hand',                // 按钮的鼠标图标

            fileObjName: 'Filedata',            // 上传参数名称

            // 两个配套使用
            fileTypeExts: "*.jpg;*.png",             // 扩展名
            fileTypeDesc: "请选择 jpg png 文件",     // 文件说明

            auto: true,                // 选择之后，自动开始上传
            multi: true,               // 是否支持同时上传多个文件
            queueSizeLimit: 5          // 允许多文件上传的时候，同时上传文件的个数
        });
    });

</script>
<h2>上传文件</h2>
<div>
    <p>
        <label>文件:</label>
    </p>
    <input id="file_upload_1" name="file_upload" type="file" multiple="true">
</div>


